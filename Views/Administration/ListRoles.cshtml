@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
@if (Model.Any())
{
<a class="btn btn-primary" asp-controller="administration" asp-action="CreateRole" style="margin-bottom:10px;">
    Create Role
</a>
    foreach (var role in Model)
    {
    <div class="row">
        <div class="well col-md-4">
            <div class="panel-heading thumbnail">
                Role Id: @role.Id
            </div>
            <div class="panel-body">
                <h4 class="panel-default">@role.Name</h4>
            </div>
            <div class="panel-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete Role: @role.Name')">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>   
     }
 }
else
     {
     <div class="thumbnail">
          <div class="panel-heading well">
                No roles created yet
          </div>
          <div class="panel-body">
               <h4 class="panel-default">
                    Use the button below to create a role
               </h4>
               <a class="btn btn-primary" asp-controller="administration" asp-action="CreateRole">
                    Create Role
               </a>
          </div>
     </div>
}
