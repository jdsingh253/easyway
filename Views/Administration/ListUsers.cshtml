@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "All Users";
}
<h1>All Users</h1>
@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary">
        Add New User
    </a>
    foreach (var user in Model)
    {
        <div class="thumbnail">
            <div class="panel-heading well">
                User ID: @user.Id
            </div>
            <div class="panel-body">
                <h5 class="panel-title">
                    @user.UserName
                </h5>
            </div>
            <div class="panel-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a asp-action="EditUser" asp-route-id="@user.Id" asp-controller="Administration" class="btn btn-primary">Edit</a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user:@user.UserName')" >
                            Delete
                        </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="thumbnail">
        <div class="panel-heading">
            No users created yet
        </div>
        <div class="panel-body">
            <h5 class="panel-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                Add New User
            </a>
        </div>
    </div>
}
